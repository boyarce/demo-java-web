<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ImagenAleatoriaServlet</servlet-name>
        <servlet-class>cl.duoc.dej.experiencia1.imagenaleatoria.ImagenAleatoriaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ContadorVisitasServlet</servlet-name>
        <servlet-class>cl.duoc.dej.experiencia2.contadorvisitas.ContadorVisitasServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListarProductosServlet</servlet-name>
        <servlet-class>cl.duoc.dej.experiencia2.tiendaonline.ListarProductosServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ContactoServlet</servlet-name>
        <servlet-class>cl.duoc.dej.experiencia2.tiendaonline.ContactoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>cl.duoc.dej.experiencia2.tiendaonline.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MantenedorProductosServlet</servlet-name>
        <servlet-class>cl.duoc.dej.experiencia2.tiendaonline.MantenedorProductosServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ImagenAleatoriaServlet</servlet-name>
        <url-pattern>/inicio</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ContadorVisitasServlet</servlet-name>
        <url-pattern>/contador-visitas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListarProductosServlet</servlet-name>
        <url-pattern>/productos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ContactoServlet</servlet-name>
        <url-pattern>/contacto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MantenedorProductosServlet</servlet-name>
        <url-pattern>/private/mantenedor</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/jsp/errores/404.jsp</location>
    </error-page>
    <welcome-file-list>
        <welcome-file>contador-visitas</welcome-file>
    </welcome-file-list>
</web-app>
